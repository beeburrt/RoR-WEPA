<p style="color: green"><%= notice %></p>

<h1>Users</h1>

<div id="users">
  <% @users.each do |user| %>
    <%= render user %>
    <p>
      <% if current_user == user %>
      <%= link_to "Show this user", current_user %>
      <% else %>

      <% end %>
    </p>
  <% end %>
</div>

<%= link_to "New user", new_user_path %>
