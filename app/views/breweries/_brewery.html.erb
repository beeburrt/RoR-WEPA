<div id="<%= dom_id brewery %>">
  <h2>
    <%= brewery.name %>
  </h2>
  <p>
    <i>Established in
      <%= brewery.year %></i>
  </p>
  <p>
    Number of beers:
    <%= brewery.beers.count %>
  </p>
  <p>
    <ul>
      <% brewery.beers.each do |beer| %>
        <li>
          <%= link_to "#{beer.name}", beer %>
        </li>
      <% end %>
    </ul>

    <p>
      <% if brewery.ratings.empty? %>
        <%= "No ratings yet" %>
      <% else %>
        <%= "Brewery has #{pluralize(brewery.ratings.count, "rating")} | Average rating: #{brewery.average_rating()}" %>
      <% end %>
    </p>

  </p>
</div>
